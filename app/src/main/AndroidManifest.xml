<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dellpc.gameoffifteen" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <!-- Splash screen -->
        <activity
            android:name="com.example.dellpc.gameoffifteen.Splash"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.dellpc.gameoffifteen.Entry"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.dellpc.gameoffifteen.HighScore"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.dellpc.gameoffifteen.Score"
            android:label="@string/app_name" >
        </activity>
        <!-- Main activity -->
        <activity
            android:name="com.example.dellpc.gameoffifteen.MainActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
