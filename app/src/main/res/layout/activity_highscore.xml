        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:text=""
        android:textColor="#ffffff"

        android:layout_marginTop="40dp"
        android:textSize="100dp"
